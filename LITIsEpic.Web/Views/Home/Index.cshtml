@using LITIsEpic.Data
@model LITIsEpic.Web.Models.HomePageViewModel
<div class="jumbotron">
    <div style="text-align: center;">
        <h2>Welcome to the LIT-W04 final day website!</h2>
        <img class="meme" src="/Content/Images/meme.jpg" />
        <br />
        <br />
        <h3 style="display: inline;">Click the image above</h3>
        <img src="/Content/Images/point-up.png" width="150" />
    </div>
</div>
<div class="well">
    <div style="text-align: center;">
        <h2>Most Frequent Visitor IPs</h2>
        <table class="table table-bordered">
            <tr>
                <th>IP Address</th>
                <th>Visit Count</th>
            </tr>
            @foreach (GetFiveMostFrequentIPsResult visit in Model.FiveMostFrequentIPs)
            {
                <tr class="success">
                    <td>@visit.IPAddress</td>
                    <td>@visit.Visits</td>
                </tr>
            }
        </table>
        <h2>Total Vists for Today (@DateTime.Today.ToShortDateString()): @Model.TodayCount </h2>
        <h2>Most popular IP: @Model.MostPopularIP</h2>
    </div>
</div>
@section scripts
{
    <script src="/Scripts/jquery.jrumble.1.3.min.js"></script>
    <script src="/Scripts/index.js"></script>
}
